{% extends 'base.html.twig' %}
{% block body %}
    <div class="container-fluid col-10 text-black text-center mt-3 ">
        <div class="card mb-3 text-center bg-dark">
  <h3 class="card-header text-black text-center bg-dark">{{voiture.modele}}</h3>
  <div class="card-body">
    <h4 class="card-subtitle text-muted">Détail de la voiture</h4>
  </div>
    <img src="https://picsum.photos/200/200" class="rounded mx-auto d-block mb-3" width="50%" height="400" alt="">
 
  <ul class="list-group list-group-flush bg-dark">
    <li class="list-group-item bg-dark">Marque : {{voiture.idMarque.nom}}</li>
    <li class="list-group-item bg-dark">Modele : {{voiture.modele}}</li>
    <li class="list-group-item bg-dark">Kilomètrage: {{voiture.km}} km</li>
    <li class="list-group-item bg-dark">Cylindrée : {{voiture.cylindree}} l</li>
    <li class="list-group-item bg-dark">Puissance : {{voiture.puissance}} Ch</li>
    <li class="list-group-item bg-dark">Carburant : {{voiture.carburant}}</li>
    <li class="list-group-item bg-dark">Transmission: {{voiture.transmission}}</li>
    <li class="list-group-item bg-dark">Date de mise en Circulation: {{voiture.anneeCirculation | date('d/m/Y')}}</li>
    <li class="list-group-item bg-dark">Nombre de propriétaires: {{voiture.nbProprio}}</li>
    <li class="list-group-item bg-dark">Description : {{voiture.description}}</li>
    <li class="list-group-item bg-dark">Options : {{voiture.optionCar}}</li>
    <li class="list-group-item bg-dark">Prix : <strong>{{voiture.prix}} €</strong></li>

  </ul>

  <div class="card-footer text-muted bg-dark">
    {{random(1,20)}} days ago
  </div>
</div>
<div class="card">
  <div class="card-body bg-dark">
    <a href="{{path('ventespage')}}" class="card-link">Retourner à nos ventes</a>
    <a href="{{path('homepage')}}" class="card-link">Retour à l'accueil</a>
  </div>
</div>
    </div>


{% endblock %}