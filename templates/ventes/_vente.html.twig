{% set url = path("ventes_show",{'slug':voiture.slug}) %}
<div class="col-md-3 text-white">
                <div class="card bg-dark mb-3">
                    <div class="card-header text-center bg-dark">


                            {{voiture.idMarque.nom}}

                        <strong> </strong> 
                    </div>
                    <img src="https://picsum.photos/200/200" class="rounded mx-auto d-block" width="200" height="200" alt="Image de l'voiture" class="starsimg">
                    <div class="card-body">
                        <div class="card-title text-center">
                            modele : <strong>{{voiture.modele}}</strong>
                        </div>
                        <p class="card-text">
                            <p>KM :{{voiture.km}}</p>
                            <p>Puissance : {{voiture.puissance}}</p>
                            <p>Carburant : {{voiture.carburant}}</p>
                            <p>Année : {{voiture.anneeCirculation | date('d/m/Y')}}</p>
                            <p>Prix : {{voiture.prix}} €</p>
                        </p>
                        <div class="text-center">
                        <a href="{{url}}" class="btn btn-secondary">Découvrire la voiture</a>
                        </div>
                    </div>
                </div>